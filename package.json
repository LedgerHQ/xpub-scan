{
  "name": "@ledgerhq/xpub-scan",
  "version": "1.0.0",
  "description": "Master public key analysis tool",
  "main": "./lib/scan.js",
  "bin": {
    "xpub-scan": "./lib/scan.js"
  },
  "scripts": {
    "clean": "yarn cache clean --force && rm -rf lib/",
    "build": "tsc && chmod +x ./lib/scan.js",
    "test": "jest",
    "sonarqube": "jest --collect-coverage --testResultsProcessor jest-sonar-reporter",
    "lint": "eslint .",
    "ts:check": "tsc --noEmit",
    "prettier": "prettier --write .",
    "ci": "yarn lint && yarn ts:check && prettier --list-different . && yarn test",
    "check:dep": "npm i && yarn check --verify-tree && check-outdated --ignore-packages chalk && npm audit --audit-level=low && npm shrinkwrap",
    "regression": "yarn build && python3 .github/workflows/regression_tests/check.py",
    "dev:test": "yarn clean && yarn check:dep && yarn prettier && yarn ci && yarn && tsc -p .",
    "dev:test:all": "yarn clean && yarn check:dep && yarn prettier && npm ci && yarn && tsc -p . && yarn regression"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:LedgerHQ/xpub-scan.git"
  },
  "author": "Guillaume Lethuillier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LedgerHQ/xpub-scan"
  },
  "homepage": "https://github.com/LedgerHQ/xpub-scan#readme",
  "dependencies": {
    "@types/bchaddrjs": "0.4.0",
    "@types/bitcore-lib-cash": "8.23.5",
    "@types/create-hmac": "1.1.0",
    "@types/html-minifier": "4.0.2",
    "@types/node": "17.0.23",
    "@types/object-hash": "2.2.1",
    "@types/yargs": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "axios": "0.26.1",
    "bchaddrjs": "0.5.2",
    "bech32": "2.0.0",
    "bignumber.js": "9.0.2",
    "bip32": "3.0.1",
    "bitcoinjs-lib": "6.0.1",
    "bitcore-lib-cash": "8.25.25",
    "bs58": "5.0.0",
    "bs58check": "2.1.2",
    "chalk": "4.1.2",
    "check-outdated": "2.10.2",
    "coininfo": "5.2.1",
    "create-hmac": "1.1.7",
    "date-fns": "2.28.0",
    "dotenv": "16.0.0",
    "eslint": "8.13.0",
    "ethereumjs-wallet": "1.0.2",
    "html-minifier": "4.0.0",
    "jest": "27.5.1",
    "object-hash": "3.0.0",
    "prettier": "2.6.2",
    "secp256k1": "4.0.3",
    "tiny-secp256k1": "2.2.1",
    "ts-node": "10.7.0",
    "typescript": "4.6.3",
    "yargs": "17.4.1"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@types/bs58check": "2.1.0",
    "@types/create-hmac": "1.1.0",
    "@types/jest": "27.4.1",
    "jest-sonar-reporter": "2.0.0"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
